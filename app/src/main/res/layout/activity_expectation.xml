<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wheat"
    tools:context=".expectation">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:foregroundGravity="center_horizontal"
    android:padding="12dp"
    tools:layout_editor_absoluteX="177dp"
    tools:layout_editor_absoluteY="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView

            android:id="@+id/textView6"
            android:layout_width="215dp"
            android:layout_height="72dp"
            android:layout_marginTop="20dp"
            android:background="@color/tumble_weed"
            android:gravity="center_horizontal"
            android:padding="10dp"
          android:layout_marginLeft="65dp"
            android:text="Expectation"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="350dp"
            android:layout_height="453dp"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toTopOf="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:srcCompat="@drawable/antimexp" />




        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:padding="20dp"
            android:textStyle="italic|bold"

            android:background="@drawable/newg"

            android:text=" * No need to study.\n\n
*daily trips.\n\n
* pass exam by one  night \n    study.\n\n
*Bunking class\n\n
*female interaction\n
"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />




    </LinearLayout>


</ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>